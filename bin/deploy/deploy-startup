#!/bin/bash
#
# Deploys fresh tixinc-js artifacts

set -e

. $HOME/.tixrc

>&2 echo "--Deploying startup script--"
pushd "$ARTIFACTS_ROOT" >/dev/null
  rimraf run.cmd
  echo "start tixinc-net\Tix.Web.SelfHost.exe & cmd.exe /s /k \"pushd tixinc-js\bin && node.exe www && popd\"" >run.cmd
popd >/dev/null
>&2 echo -e "${GREEN}--Startup script successfully deployed--${NC}"
