#!/bin/bash
#
# Deploys fresh tixinc-js artifacts

set -e

. "$HOME/.tixrc"

run_file_path="$BUILD_ROOT/run.cmd"

>&2 printf -- "- deploying startup script -\n"
mkdirp "$BUILD_ROOT"
rimraf "$run_file_path"

start_node="pushd tixinc-js && bin\\node.exe bin\\www && popd"
printf -- "start tixinc-net\\Tix.Web.SelfHost.exe & cmd.exe /s /k \"%s\"" "$start_node" >"$run_file_path"
>&2 printf -- "%b- startup script successfully deployed -%b\n" "$GREEN" "$NC"
