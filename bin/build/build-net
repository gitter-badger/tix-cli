#!/bin/bash
#
# Deploys fresh tixinc-net artifacts

set -e
. "$HOME/.tixrc"

latest=false
version=""
tools_version="12.0"
visual_studio_version="12.0"
configuration="Debug"
encrypt=false
output_path="$NET_BUILD_ROOT"

usage_short="${CYAN}Usage: build-net -l|-v version [-t ToolsVersion] [-V VisualStudioVersion] [-c Configuration] [-e] [-o OutputPath]"
usage_long="$usage_short\n-l: deploy latest version of tixinc-net"
usage_long="$usage_long\n-v: deploy specific version (tag or hash)"
usage_long="$usage_long\n-t: msbuild ToolsVersion to use (default=${tools_version})"
usage_long="$usage_long\n-V: msbuild VisualStudioVersion to use (default=${visual_studio_version})"
usage_long="$usage_long\n-c: configuration to deploy (default=${configuration})"
usage_long="$usage_long\n-e: encrypt configuration section"
usage_long="$usage_long\n-o: output path (default=$output_path)${NC}"

usage_short="$usage_short\nUse -h to get supported command information.${NC}"


options=":lv:t:V:c:eo:h"
shopt -u nocasematch
OPTIND=1
while getopts "$options" opt ; do
    case "$opt" in
    l )
      latest=true
      ;;
    v )
      version="$OPTARG"
      ;;
    t )
      tools_version="$OPTARG"
      ;;
    V )
      visual_studio_version="$OPTARG"
      ;;
    c )
      configuration="$OPTARG"
      ;;
    e )
      encrypt=true
      ;;
    o )
      output_path="$OPTARG"
      ;;
    h )
      >&2 echo -e "$usage_long" && exit 1
      exit 0
      ;;
    \?)
      >&2 echo -e "Unknown option: -$OPTARG"
      >&2 echo -e "$usage_short"
      exit 1
      ;;
    : )
      >&2 echo -e "Missing option argument for -$OPTARG"
      >&2 echo -e "$usage_short"
      exit 1
      ;;
    * )
      >&2 echo -e "Unimplemented option: -$OPTARG" && exit 1
      >&2 echo -e "$usage_short"
      exit 1
    esac
done
shift $((OPTIND-1))

if [ "$latest" = true ] ; then
  version="$(revisions -l tixinc-net)"
fi

if [ "$version" = "" ] ; then
  >&2 echo -e "${RED}--Must specify a version to build (-l or -v version)--${NC}"
  exit 1
fi

# msbuild might exist and be in path, might exist and not be in path or might not exist... thankfully MS makes this easy to install.. not
# setup default paths an test to see if its there
msbuild_path="/c/Program Files (x86)/MSBuild/${tools_version}/Bin/MSBuild.exe"
win_msbuild_path="$(cpath -w "$msbuild_path")"
if [ ! -f "$msbuild_path" ] ; then
  # Not there, lets install
  >&2 echo -e "${BLUE}--MSBUILD not found, installing...--${NC}"
  choco install microsoft-build-tools

  # These downloads might help at some point
  #http://download.microsoft.com/download/9/B/B/9BB1309E-1A8F-4A47-A6C5-ECF76672A3B3/BuildTools_Full.exe
  #choco install netfx-4.5.2-devpack
fi
if [ ! -f "$msbuild_path" ] ; then
  >&2 echo -e "${RED}--MSBUILD still not found... see if it is in default path--${NC}"
  msbuild_path="msbuild"
  win_msbuild_path="msbuild"
fi


echo "--executing sync-net $version--"
sync-net "$version"

>&2 echo "--Building and deploying artifacts version $version--"
pushd "$NET_SYNC_ROOT" >/dev/null
  >&2 echo "--Restoring packages--"
  nuget restore Tix.SelfHost.sln -PackagesDirectory packages -Verbosity quiet -NonInteractive
  >&2 echo "--Packages restored successfully--"

  >&2 echo "--Cleaning $NET_ARTIFACTS_ROOT--"
  rimraf "$NET_BUILD_ROOT"
  rimraf "$NET_ARTIFACTS_ROOT"
  mkdirp "$NET_BUILD_ROOT"
  mkdirp "$NET_ARTIFACTS_ROOT"
  >&2 echo "--MSBUILD artifacts--"

  win_net_build_root="$(cpath -w "$output_path")"
  >&2 echo "Building to $win_net_build_root"

  >&2 echo "Executing... -> cmd /c \"$win_msbuild_path\" Tix.Web.SelfHost\Tix.Web.SelfHost.csproj /tv:${tools_version} /nologo /p:VisualStudioVersion=${visual_studio_version} /p:Configuration=${configuration} /p:OutputPath=\"${win_net_build_root}\" /m /v:m /clp:ErrorsOnly"
  cmd //c "$win_msbuild_path" Tix.Web.SelfHost\\Tix.Web.SelfHost.csproj //tv:${tools_version} //nologo //p:VisualStudioVersion=${visual_studio_version} //p:Configuration=${configuration} //p:OutputPath="${win_net_build_root}" //m //v:m //clp:ErrorsOnly
  >&2 echo "--MSBUILD finished successfully--"

  >&2 echo "--Cleaning packages--"
  rimraf packages
  >&2 echo "--Packages cleaned successfully--"
popd >/dev/null

if [ "$encrypt" = true ] ; then
  npm install -g cryptkeeper &>/dev/null
  config_path="$NET_BUILD_ROOT/Tix.Web.SelfHost.exe.config"
  cryptkeeper -ens connectionStrings -p "${configuration}Provider" -C "${configuration}Keys" -E "$BUILD_ROOT" -R "$config_path"
fi

>&2 echo -e "${GREEN}--NET version $version successfully built--${NC}"