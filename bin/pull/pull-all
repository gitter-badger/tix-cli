#!/bin/bash
#
# Gets status of all modules being used for current development

. "$HOME/.tixrc"

pushd "$MODULE_ROOT" >/dev/null
    for module in */; do
        module_name=$(echo "$module" | tr -d '/')
        if [ -d "$module_name/.git" ]; then
          pushd "$module_name" >/dev/null
            git pull --follow-tags
          popd >/dev/null
        fi
    done
popd >/dev/null
