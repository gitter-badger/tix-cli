#!/bin/bash
#
# Clones the specified module to a directory in the modules installation root

source $HOME/.tixrc

### if no arguments, throw an error
if [ $# -eq 0 ]; then
  >&2 echo Must specify a module to clone...
  exit 1
fi

pushd $MODULE_ROOT
  git clone "${GITHUB_URL_BASE}/cchamberlain/gyp" 2>&1 | grep -qi "fatal" && >&2 echo "An error occurred while cloning." && exit 1
  git clone "${GITHUB_URL_BASE}/cchamberlain/node-gyp" 2>&1 | grep -qi "fatal" && >&2 echo "An error occurred while cloning." && exit 1
popd
