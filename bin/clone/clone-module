#!/bin/bash
#
# Clones the specified module

git_url="https://$(github-token)@github.com/TixInc/$0"
module_path="~/tixinc/$0"

if [ -d $module_path ]; then
  echo Module $0 already exists at $module_path...
  exit 1
fi

>&2 echo cloning $git_url to $module_path...

git clone $git_url $module_path

>&2 echo $0 cloned successfully.