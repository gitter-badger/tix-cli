#!/bin/bash
#
# This script installs the tix-cli

### Init ~/.tixrc if it does not exist and source it
CONFIG_PATH=$HOME/.tixrc
if [ ! -e "$CONFIG_PATH" ]; then
    echo -e "--$CONFIG_PATH doesn't exist, sourcing from GitHub...--"
    cp "$HOME/local/bin/node_modules/tix-cli/bin/tixrc" "$CONFIG_PATH"
    echo -e "${GREEN}--$CONFIG_PATH restored successfully--${NC}"
fi

