#!/bin/bash

set -e

. "$HOME/.tixrc"

bin_path="Tix.Automation\\bin\\Release"
automation_method="Tix.Automation.Sql.IdentityAutomation.CreateIdentityDatabaseIfNotExists"
if [ "$1" = "-r" ]; then
  automation_method="Tix.Automation.Sql.IdentityAutomation.DropCreateIdentityDatabase"
fi

clone-tixinc-net
pushj "$MODULE_ROOT/tixinc-net"
  git reset --hard
  git pull

  >&2 printf -- "- restoring nuget packages -\n"
  nuget restore Tix.SelfHost.sln -PackagesDirectory packages -Verbosity quiet -NonInteractive

  >&2 printf -- "- building prod -\n"
  cmd //s //c "call "C:\\Program Files \(x86\)\\Microsoft Visual Studio 12.0\\VC\\vcvarsall.bat" x86 & msbuild Tix.Automation\\Tix.Automation.csproj /tv:12.0 /nologo /p:VisualStudioVersion="12.0" /p:Configuration=Release /p:OutputPath="$bin_path"  /m /v:m /clp:ErrorsOnly"
  >&2 printf -- "- deploying prod identity db -\n"
  cmd //c packages\\xunit.runner.console.2.0.0\\tools\\xunit.console.exe "$bin_path\\Tix.Automation.dll" -method "$automation_method"
popj

