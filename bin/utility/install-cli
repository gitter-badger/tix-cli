#!/bin/bash
#
# This script installs the tix-cli

source $HOME/.tixrc

echo "Installing CLI to $CLI_ROOT..."
mkdir -p $MODULE_ROOT
pushd $MODULE_ROOT
  if [ -d $CLI_ROOT ];then
    rimraf $CLI_ROOT
  fi

  git clone --depth 1 $GITHUB_URL_CLI
  pushd $CLI_ROOT
    rimraf .git
    rimraf .gitignore
    rimraf .settings
    rimraf img
    rimraf src

    echo "--Installing NPM Components...--"
    npm install minimist --save >
    npm install shelljs --save
    npm install lodash --save
    npm install colors --save
    npm install read --save
    npm install q --save
    npm install ftp --save
    echo "--NPM Components installed successfully--"
  popd
popd

echo "CLI installed successfully."
