#!/bin/bash
#
# This script runs the tixinc-js project in debug mode

source $HOME/local/bin/node_modules/tix-cli/bin/tix-init

pushd $JS_ROOT
echo "--Running npm install on tixinc-js, this will take a minute...--"
npm install 2>&1 >> $LOG_PATH

echo "--Debugging on port 1336--"
chrome_path="C:\Program Files (x86)\Google\Chrome\Application\chrome.exe"
debug_url="http://localhost:1336"
browser-sync start --proxy localhost:1336 --no-open & nodemon bin/www & "$chrome_path" "$debug_url"

popd